<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:layout_gravity="end"
    android:background="#00000000"
    android:elevation="4dp"
    android:gravity="end" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="@dimen/btnBackWidth"
            android:layout_height="@dimen/btnBackHeight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginleftBackButton"
            android:background="@drawable/back_arrow_header" />

        <TextView
            android:id="@+id/tvToolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginleftToolbarText"
            android:layout_toRightOf="@+id/btnBack"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/textSizeMedium" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/imView"
        android:layout_width="@dimen/menuIconDimension"
        android:layout_height="@dimen/menuIconDimension"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/marginleftBackButton"
        android:background="@drawable/menu_icon"
        android:visibility="gone" />

</android.support.v7.widget.Toolbar>
